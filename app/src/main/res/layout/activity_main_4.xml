<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/content"
    android:background="@drawable/leaves">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="20dp"
        android:background="@drawable/timer"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/time_view"
            android:padding="15dp"
            android:gravity="center"
            android:textStyle="bold"
            android:fontFamily="sans-serif"
            android:textSize="27dp"
            android:text="⏱ 00:00:00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#E68E20"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|top"
        android:layout_margin="110dp"
        android:background="@drawable/timer"
        android:orientation="horizontal"
        >
        <TextView
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:padding="15dp"
            android:textSize="27dp"
            android:text="👣Step: 0  "
            android:fontFamily="sans-serif"
            android:id="@+id/step_view"
            android:textStyle="bold"
            android:textColor="#E68E20"
            android:layout_height="wrap_content"/>

    </LinearLayout>

<RelativeLayout
        android:id="@+id/button_group"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:padding="19dp"
        android:background="@drawable/ramka"
        android:layout_height="wrap_content">

        <Button
            android:onClick="buttonClick"
            android:id="@+id/btn1"
            android:text="1"
            android:tag="0:0"
            android:textStyle="bold"
            android:layout_marginStart="2dp"
            android:layout_marginBottom="1dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="1dp"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/fill_btn"
            android:textColor="#66200B"
            android:textSize="50sp" />

        <Button
            android:onClick="buttonClick"
            android:id="@+id/btn2"
            android:text="2"
            android:tag="0:1"
            android:layout_marginStart="1dp"
            android:layout_marginBottom="1dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="1dp"
            android:textColor="#66200B"
            android:textSize="50sp"
            android:textStyle="bold"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/fill_btn"
            android:layout_toRightOf="@id/btn1"/>
        <Button
            android:onClick="buttonClick"
            android:id="@+id/btn3"
            android:text="3"
            android:tag="0:2"
            android:layout_marginStart="1dp"
            android:layout_marginBottom="1dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="1dp"
            android:textColor="#66200B"
            android:textSize="50sp"
            android:textStyle="bold"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_toRightOf="@id/btn2"
            android:background="@drawable/fill_btn"/>

        <Button
            android:onClick="buttonClick"
            android:id="@+id/btn4"
            android:text="4"
            android:tag="0:3"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:textStyle="bold"
            android:layout_marginStart="1dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="2dp"
            android:layout_marginBottom="1dp"
            android:layout_toRightOf="@id/btn3"
            android:background="@drawable/fill_btn"
            android:textColor="#66200B"
            android:textSize="50sp" />
        <Button
            android:onClick="buttonClick"
            android:id="@+id/btn5"
            android:text="5"
            android:tag="1:0"
            android:layout_marginStart="2dp"
            android:layout_marginBottom="1dp"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="1dp"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:textStyle="bold"
            android:layout_alignParentStart="true"
            android:layout_below="@id/btn1"
            android:background="@drawable/fill_btn"
            android:textColor="#66200B"
            android:textSize="50sp" />

        <Button
            android:onClick="buttonClick"
            android:id="@+id/btn6"
            android:text="6"
            android:tag="1:1"
            android:layout_marginStart="1dp"
            android:layout_marginBottom="1dp"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="1dp"
            android:textColor="#66200B"
            android:textSize="50sp"
            android:textStyle="bold"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/fill_btn"
            android:layout_below="@id/btn2"
            android:layout_toRightOf="@id/btn5"/>
        <Button
            android:onClick="buttonClick"
            android:id="@+id/btn7"
            android:text="7"
            android:tag="1:2"
            android:layout_marginStart="1dp"
            android:layout_marginBottom="1dp"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="1dp"
            android:textColor="#66200B"
            android:textSize="50sp"
            android:textStyle="bold"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_toRightOf="@id/btn2"
            android:layout_below="@id/btn3"
            android:background="@drawable/fill_btn"/>
        <Button
            android:onClick="buttonClick"
            android:id="@+id/btn8"
            android:text="8"
            android:tag="1:3"
            android:layout_marginStart="1dp"
            android:layout_marginBottom="1dp"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="2dp"
            android:textColor="#66200B"
            android:textStyle="bold"
            android:textSize="50sp"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_toRightOf="@id/btn3"
            android:layout_below="@id/btn4"
            android:background="@drawable/fill_btn"/>
        <Button
            android:onClick="buttonClick"
            android:id="@+id/btn9"
            android:text="9"
            android:tag="2:0"
            android:layout_marginStart="2dp"
            android:layout_marginBottom="1dp"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="1dp"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentStart="true"
            android:layout_below="@id/btn5"
            android:textStyle="bold"
            android:background="@drawable/fill_btn"
            android:textColor="#66200B"
            android:textSize="50sp" />

        <Button
            android:onClick="buttonClick"
            android:id="@+id/btn10"
            android:text="10"
            android:tag="2:1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_below="@id/btn6"
            android:layout_marginStart="1dp"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="1dp"
            android:layout_marginBottom="1dp"
            android:layout_toRightOf="@id/btn5"
            android:background="@drawable/fill_btn"
            android:textColor="#66200B"
            android:textStyle="bold"
            android:textSize="50sp" />
        <Button
            android:onClick="buttonClick"
            android:id="@+id/btn11"
            android:text="11"
            android:tag="2:2"
            android:layout_marginStart="1dp"
            android:layout_marginBottom="1dp"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="1dp"
            android:textColor="#66200B"
            android:textSize="50sp"
            android:textStyle="bold"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_toRightOf="@id/btn2"
            android:layout_below="@id/btn7"
            android:background="@drawable/fill_btn"/>
        <Button
            android:onClick="buttonClick"
            android:id="@+id/btn12"
            android:text="12"
            android:tag="2:3"
            android:layout_marginStart="1dp"
            android:layout_marginBottom="1dp"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="2dp"
            android:textColor="#66200B"
            android:textSize="50sp"
            android:textStyle="bold"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_toRightOf="@id/btn3"
            android:layout_below="@id/btn8"
            android:background="@drawable/fill_btn"/>

        <Button
            android:id="@+id/btn13"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_below="@id/btn9"
            android:layout_alignParentStart="true"
            android:layout_marginStart="2dp"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="1dp"
            android:layout_marginBottom="1dp"
            android:background="@drawable/fill_btn"
            android:onClick="buttonClick"
            android:tag="3:0"
            android:text="13"
            android:textColor="#66200B"
            android:textSize="50sp"
            android:textStyle="bold" />

        <Button
            android:onClick="buttonClick"
            android:id="@+id/btn14"
            android:text="14"
            android:tag="3:1"
            android:layout_marginStart="1dp"
            android:layout_marginBottom="1dp"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="1dp"
            android:textColor="#66200B"
            android:textSize="50sp"
            android:textStyle="bold"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/fill_btn"
            android:layout_below="@id/btn10"
            android:layout_toRightOf="@id/btn5"/>
        <Button
            android:onClick="buttonClick"
            android:id="@+id/btn15"
            android:text="15"
            android:tag="3:2"
            android:layout_marginStart="1dp"
            android:layout_marginBottom="1dp"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="2dp"
            android:textColor="#66200B"
            android:textSize="50sp"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:textStyle="bold"
            android:layout_toRightOf="@id/btn2"
            android:layout_below="@id/btn11"
            android:background="@drawable/fill_btn"/>

        <Button
            android:onClick="buttonClick"
            android:id="@+id/btn16"
            android:textStyle="bold"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_below="@id/btn12"
            android:layout_marginStart="1dp"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="2dp"
            android:layout_marginBottom="2dp"
            android:layout_toRightOf="@id/btn3"
            android:background="@drawable/empty_button"
            android:tag="3:3"
            android:textColor="#66200B"
            android:textSize="50sp"
            tools:text="16" />
    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/paused_view"
        android:visibility="gone"
        android:background="#00FFFFFF"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="   ⏸   "
            android:gravity="center"
            android:textSize="70dp"
            android:textColor="#FFB300"
            />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_gravity="bottom"
        android:layout_height="150dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="restart"
            android:textStyle="bold"
            android:padding="10dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:onClick="onClick"
            android:id="@+id/restart"
            android:textSize="30dp"
            android:textColor="#E68E20"
            android:background="@drawable/timer" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:onClick="onClickPause"
            android:id="@+id/pause"
            android:text="   pause   "
            android:padding="10dp"
            android:textStyle="bold"
            android:textColor="#E68E20"
            android:textSize="30dp"
            android:background="@drawable/timer" />

    </LinearLayout>

</FrameLayout>





